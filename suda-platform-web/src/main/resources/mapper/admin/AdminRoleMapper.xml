<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suda.platform.mapper.AdminRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.suda.platform.entity.AdminRole">
        <id column="id" property="id" />
        <result column="role_parent_id" property="roleParentId" />
        <result column="role_name" property="roleName" />
        <result column="role_value" property="roleValue" />
        <result column="create_time" property="createTime" />
        <result column="details" property="details" />
        <result column="last" property="last" />
        <result column="admin_user_id" property="adminUserId" />
        <result column="timestamp" property="timestamp" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_parent_id, role_name, role_value, create_time, details, last, admin_user_id, timestamp
    </sql>

    <!--分页查询角色-->
    <select id="selectRoles" resultType="com.suda.platform.entity.AdminRole" parameterType="com.suda.platform.entity.AdminRole">

      select
      id, role_parent_id, role_name, role_value, create_time, details, last, admin_user_id
      from admin_role
      <where>
          <if test="id !=null">
            and  id = #{id}
          </if>
          <if test="roleName !='' and roleName !=null">
            and  role_name = #{roleName}
          </if>

      </where>
      order by id desc
    </select>

</mapper>
